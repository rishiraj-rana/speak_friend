<?xml version="1.0" encoding="UTF-8"?>
<xrds:XRDS
xmlns:xrds="xri://$xrds"
xmlns:tal="http://xml.zope.org/namespaces/tal"
xmlns="xri://$xrd*($v*2.0)">
<XRD>
    <Service priority="0">
        <tal:resources repeat="service services">
            <Type>${service}</Type>
        </tal:resources>
        <URI>${request.route_url('openid_provider')}</URI>
        <tal:localid condition="auth_userid">
            <LocalID>${identity_url}</LocalID>
        </tal:localid>
    </Service>
    <Service priority="1">
        <Type>http://specs.openid.net/auth/2.0/return_to</Type>
        <URI>${request.route_url('openid_provider')}</URI>
        <URI>${request.route_url('login')}</URI>
        <URI>${request.route_url('home')}</URI>
        <tal:localid condition="auth_userid">
            <LocalID>${identity_url}</LocalID>
        </tal:localid>
    </Service>
</XRD>
</xrds:XRDS>
