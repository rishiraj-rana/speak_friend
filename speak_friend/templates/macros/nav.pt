<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">
  <metal:nav define-macro="nav">
       <div class="navbar">
           <div class="navbar-inner">
               <ul id="site-nav" class="nav">
                   <li tal:attributes="class api.is_active_tab('home')"><a href="/">Home</a></li>
                   <tal:not-authenticated tal:condition="not api.current_userid">
                   <li tal:attributes="class api.is_active_tab('login')"><a tal:attributes="href request.route_url('login')">Sign In</a></li>
                   </tal:not-authenticated>
                   <tal:create tal:condition="not api.current_userid or api.is_superuser">
                   <li tal:attributes="class api.is_active_tab('create_profile')"><a tal:attributes="href request.route_url('create_profile')">Create Profile</a></li>
                   </tal:create>
                   <tal:admin tal:condition="api.is_superuser">
                   <li tal:attributes="class api.is_active_tab('control_panel')"><a href="/control_panel">Settings</a></li>
                   <li><a href="#">Admin</a></li>
                   </tal:admin>
                   <tal:authenticated tal:condition="api.current_userid">
                   <li tal:attributes="class api.is_active_tab('edit_profile') or api.is_active_tab('change_password')"><a tal:attributes="href request.route_url('edit_profile',
                       username=api.current_userid)">Edit Profile</a></li>
                   <li><a tal:attributes="href request.route_url('logout')">Log Out</a></li>
                   </tal:authenticated>
               </ul>
           </div>
       </div>
  </metal:nav>
</html>
